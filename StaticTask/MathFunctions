public class MathFunctions {

    // static o'zgaruvchilar (qiymatlari berilgan)
    public static double PI = 3.14159265359;
    public static double E  = 2.71828182846;

    // bo‘sh konstruktor (initialize uchun)
    public MathFunctions() {
        // maxsus ish yo‘q, faqat klass ishga tushadi
    }

    // Doira yuzini hisoblash: S = π * r^2
    public static double circleArea(double radius) {
        return PI * radius * radius;
    }

    // e ning a-darajasi: e^a
    public static double powerOfE(double a) {
        return Math.pow(E, a);
    }

    // Uchburchak yuzini Geron formulasi bilan hisoblash
    public static double triangleArea(double a, double b, double c) {
        double p = (a + b + c) / 2;
        return Math.sqrt(p * (p - a) * (p - b) * (p - c));
    }
}
